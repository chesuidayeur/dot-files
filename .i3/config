# Shutdown, reboot, lock screen
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown, (d) dual, (Shift+d) dualoff, b bepo, a azerty
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"  
    bindsym d exec --no-startup-id i3exit dualscreen, mode "default"
    bindsym Shift+d exec --no-startup-id i3exit dualscreenoff, mode "default"
    bindsym t exec --no-startup-id i3exit restart-tmux, mode "default"
    bindsym w exec --no-startup-id i3exit wifion, mode "default"
    bindsym Shift+w exec --no-startup-id i3exit wifioff, mode "default"
    bindsym b exec --no-startup-id i3exit bepo, mode "default"
    bindsym a exec --no-startup-id i3exit azerty, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"

